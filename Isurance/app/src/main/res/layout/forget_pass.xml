<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/forgetPass_layout_head"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/register_background"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/forgetPass_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/back"
            android:layout_margin="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="15dp"
            />

    </RelativeLayout>


    <RelativeLayout
        android:background="#FFF"
        android:layout_below="@id/forgetPass_layout_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="35dp"
        >

        <RelativeLayout
            android:id="@+id/register_layout_phonenumber_layout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/register_input_all_corner"
            >

            <ImageView
                android:layout_marginStart="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/phone"
                android:layout_centerVertical="true"
                android:id="@+id/register_layout_phonenumber_image"
                />
            <EditText
                android:id="@+id/forgetPass_num"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/register_layout_phonenumber_image"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:hint="请输入手机号"
                android:layout_centerVertical="true"
                android:textColorHint="#fff"
                android:textSize="15sp"
                android:background="@null"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/register_layout_phonenumber_layout"
            android:id="@+id/register_layout_password_layout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/register_input_all_corner"
            android:layout_marginTop="25dp"
            >

            <ImageView
                android:layout_marginStart="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/code"
                android:layout_centerVertical="true"
                android:id="@+id/register_layout_password_image"
                />
            <EditText
                android:id="@+id/forgetPass_code"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/register_layout_password_image"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:hint="请输入验证码"
                android:layout_centerVertical="true"
                android:textColorHint="#fff"
                android:textSize="15sp"
                android:background="@null"
                android:inputType="textPassword"
                />
        </RelativeLayout>


        <TextView
            android:id="@+id/forgetPass_appleCode"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:layout_below="@id/register_layout_password_layout"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="15sp"
            />

        <Button
            android:id="@+id/forgetPass_next"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="下一步"
            android:layout_below="@id/forgetPass_appleCode"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/register_layout_register_button_background"
            android:textSize="20sp"
            android:textColor="#fff"
            />

    </RelativeLayout>

</RelativeLayout>