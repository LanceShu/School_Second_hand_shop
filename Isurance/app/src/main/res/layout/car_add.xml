<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/register_layout_head"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/register_background"

        >

        <ImageView
            android:id="@+id/register_layout_back_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/back"
            android:layout_margin="10dp"
            />

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加车辆信息"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="15dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="购车年份："
                android:textColor="#000"
                android:textSize="20sp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/car_year"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="date"
                android:textColor="#000"
                android:textSize="20sp"
                android:hint="例：2017"
                android:gravity="center"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="年"
                android:textColor="#000"
                android:textSize="20sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="购车价格："
                android:textColor="#000"
                android:textSize="20sp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/car_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="date"
                android:textColor="#000"
                android:textSize="20sp"
                android:hint="例：25"
                android:gravity="center"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="万元"
                android:textColor="#000"
                android:textSize="20sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="车牌号："
                android:textColor="#000"
                android:textSize="20sp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/car_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="20sp"
                android:hint="例：陕AXXXXX"
                android:gravity="center"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="#000"
                android:textSize="20sp"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/addcar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="添加信息"
        android:textSize="18sp"
        android:textColor="#fff"
        android:backgroundTint="@color/register_background"/>

</LinearLayout>
