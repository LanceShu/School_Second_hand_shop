<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.design.widget.CoordinatorLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/main_appbar"
            android:layout_width="match_parent"
            android:layout_height="242dp"
            android:fitsSystemWindows="true"
            android:background="#bababa">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                <com.our_company.school_second_hand_shop.MyView.ImageBarnnerFrameLayout
                    android:id="@+id/image_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax">

                </com.our_company.school_second_hand_shop.MyView.ImageBarnnerFrameLayout>

            </android.support.design.widget.CollapsingToolbarLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/devide_back"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="57.5dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/main_hobby"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/image1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@mipmap/guitar"/>

                        <TextView
                            android:layout_below="@id/image1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:textColor="#494949"
                            android:text="兴趣爱好"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/main_computer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/image2"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@mipmap/computer"/>

                        <TextView
                            android:layout_below="@id/image2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:textColor="#494949"
                            android:text="电脑"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/main_books"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/image3"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@mipmap/books"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:layout_below="@id/image3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:textColor="#494949"
                            android:text="图书素材"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/main_mouses"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/image4"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@mipmap/mouse"/>

                        <TextView
                            android:layout_below="@id/image4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:textColor="#494949"
                            android:text="鼠标配件"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/main_gifts"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/image5"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@mipmap/gifts"/>

                        <TextView
                            android:layout_below="@id/image5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:textColor="#494949"
                            android:text="收藏礼品"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_marginTop="3dp"
                    android:layout_below="@id/linear1"
                    android:layout_width="match_parent"
                    android:layout_height="57.5dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/main_basketball"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/image6"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@mipmap/basketball"/>

                        <TextView
                            android:layout_below="@id/image6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:textColor="#494949"
                            android:text="运动健身"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/main_clothes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/image7"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@mipmap/clothes"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:layout_below="@id/image7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:textColor="#494949"
                            android:text="衣服裤帽"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/main_phones"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/image8"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@mipmap/myphone"/>

                        <TextView
                            android:layout_below="@id/image8"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:textColor="#494949"
                            android:text="手机"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/main_cosmeticss"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/image9"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@mipmap/cosmetics"/>

                        <TextView
                            android:layout_below="@id/image9"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:textColor="#494949"
                            android:text="保养化妆"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/main_others"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/image0"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@mipmap/icon"/>

                        <TextView
                            android:layout_below="@id/image0"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:textColor="#494949"
                            android:text="其他"/>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </android.support.design.widget.AppBarLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/goods_Info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/cdl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="#ffff"/>

    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/find_bar"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/classification_layout_title_background"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/main_menu_find"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/login_edit_back"
            >

            <LinearLayout
                android:id="@+id/find_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/find"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/main_find"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="搜索好货"
                    android:gravity="center"
                    android:textColorHint="#fff"
                    android:background="@null"
                    android:editable="false"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"
        android:src="@drawable/jia"
        app:backgroundTint="@color/register_background"
        app:rippleColor="#33728dff"/>

    <LinearLayout
        android:id="@+id/fab2_layout"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/fab1"
        android:layout_margin="15dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/addGoods"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="发布商品"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:gravity="center" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_marginLeft="10dp"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:src="@drawable/jia"
            app:backgroundTint="@color/colorAccent"
            app:rippleColor="#33728dff"/>

    </LinearLayout>

</RelativeLayout>
