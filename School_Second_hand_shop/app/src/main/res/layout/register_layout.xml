<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/register_layout_head"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/register_background"

        >

        <ImageView
            android:id="@+id/register_layout_back_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/back"
            android:layout_margin="10dp"
            />

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户注册"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="15dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:background="#FFF"
        android:layout_below="@id/register_layout_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="35dp"
        >

        <RelativeLayout
            android:id="@+id/register_layout_phonenumber_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/register_input_all_corner"
            >

            <ImageView
                android:layout_marginStart="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/phone"
                android:layout_centerVertical="true"
                android:id="@+id/register_layout_phonenumber_image"
                />
            <EditText
                android:id="@+id/register_layout_phonenumber_input"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/register_layout_phonenumber_image"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="请输入手机号"
                android:layout_centerVertical="true"
                android:textColorHint="#fff"
                android:textSize="15sp"
                android:background="@null"
                />

            <ImageView
                android:id="@+id/register_layout_clear_button"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/clear_icon"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/register_layout_phonenumber_layout"
            android:id="@+id/register_layout_password_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/register_input_all_corner"
            android:layout_marginTop="25dp"
            >

            <ImageView
                android:layout_marginStart="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/lock"
                android:layout_centerVertical="true"
                android:id="@+id/register_layout_password_image"
                />
            <EditText
                android:id="@+id/register_layout_password_input"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/register_layout_password_image"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="请输入密码"
                android:layout_centerVertical="true"
                android:textColorHint="#fff"
                android:textSize="15sp"
                android:background="@null"
                android:inputType="textPassword"
                />

            <ImageView
                android:id="@+id/register_layout_see_password_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/eye_cant_see"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/register_layout_password_layout"
            android:id="@+id/register_layout_password_agin_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/register_input_all_corner"
            android:layout_marginTop="25dp"
            >

            <ImageView
                android:layout_marginStart="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/lock"
                android:layout_centerVertical="true"
                android:id="@+id/register_layout_password_agin_image"
                />
            <EditText
                android:id="@+id/register_layout_password_agin_input"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/register_layout_password_agin_image"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="请再次输入密码"
                android:layout_centerVertical="true"
                android:textColorHint="#fff"
                android:textSize="15sp"
                android:background="@null"
                android:inputType="textPassword"
                />

            <ImageView
                android:id="@+id/register_layout_see_password_again_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/eye_cant_see"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/register_layout_secretcode_text"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:layout_below="@id/register_layout_password_agin_layout"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="15sp"
            />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/register_layout_secretcode_text"
            android:layout_below="@id/register_layout_password_agin_layout"
            android:hint="请输入验证码"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/register_layout_secretcode_input"
            android:background="@null"
            android:maxLines="1"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  快速注册  "
            android:layout_below="@id/register_layout_secretcode_input"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/register_layout_register_button_background"
            android:textSize="15sp"
            android:textColor="#fff"
            />

    </RelativeLayout>

</RelativeLayout>